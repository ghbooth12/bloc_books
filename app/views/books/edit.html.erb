<h1>Edit Book</h1>

<form action="/books/update">
  <input type="hidden" name="id" value="<%= book.id %>">
  <label for="name">Name</label>
  <input type="text" id="name" name="book[name]" value="<%= book.name %>">
  <label for="author">Author</label>
  <input type="text" id="author" name="book[author]" value="<%= book.author %>">
  <label for="pages">Pages</label>
  <input type="text" id="pages" name="book[pages]" value="<%= book.pages %>">
  <button type="submit">Update</button>
</form>
